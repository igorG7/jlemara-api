{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src"
  },
  "include": [
    "*",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}